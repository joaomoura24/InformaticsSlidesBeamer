\defbeamertemplate*{title page}{info}[1][]{
    \begin{tikzpicture}[remember picture,overlay]
        \node (backgroundImage) [
            anchor=north west,
            opacity=1.0,
            inner sep=0pt
            ] at ($(current page.north west)+(0,-1.4)$) {%
            \includegraphics[width=\paperwidth]{background}
        };
        % top rectangle
        \node (back names) [%
            shape=rectangle, 
            text opacity=1, 
            fill=headerGrey,
            inner sep=0pt,
            outer sep=0pt,
            minimum height=0.155556\paperheight,
            minimum width=\paperwidth, 
            anchor=north,
            ] at (current page.north) {};
        % logo
        \node (informaticsLogo) [%
            anchor=north west,
            inner sep=0pt,
            ] at ($(current page.north west)+(0.2,-0.2)$) {%
            \includegraphics[height=0.111111\paperheight]{InformaticsUni_CMYK}
        };
        \node (titleArea) [%
            shape=rectangle, 
            fill=white,
            fill opacity=0.6,
            text opacity=1, 
            minimum height=0.42\paperheight,
            minimum width=\paperwidth,
            anchor=north west,
        ] at ($(current page.north west)+(0,-2.8)$) {%
            \begin{minipage}{0.5\textwidth}
                \usebeamerfont{title}\begin{flushleft}\inserttitle\end{flushleft} \par
                \vspace{0.5em}
                \usebeamerfont{subtitle}\insertsubtitle \par
                \bigskip
                \usebeamerfont{author}\insertauthor \par
                \usebeamerfont{institute}\insertinstitute \par
                \usebeamerfont{date}\insertdate \par
                \inserttitlegraphic
            \end{minipage}
        };
    \end{tikzpicture}
}

